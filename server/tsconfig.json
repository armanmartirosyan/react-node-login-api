{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES6"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "esModuleInterop": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules"],
    "lib": ["ESNext"],
}